<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>BlogKaro</title>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container">
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4">
          <div class="card" style="width: 18rem;">
            <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="<%= blog.title %>" width="100px" height="200px">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  </div>
  <%- include('partials/script') %>
</body>
</html>