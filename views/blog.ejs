<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>Blog</title>
</head>
<body>
  <%- include('partials/nav') %>
  
  <div class="container mt-4">
    <% if (blog) { %>
      <h1><%= blog.title %></h1>
      <img src=`/public/images/${<%= blog.coverImageUrl %>}` width="700px" alt="Error">
      <pre class="mt-4"><%= blog.content %></pre>
    <% } else { %>
      <p>Blog content not available.</p>
    <% } %>
  </div>

  <div class="container mt-4">
    <img src="<%= blog.CreatedBy.profileImageURL %>" alt="Profile Image" width="20px" height="20px"><%= blog.CreatedBy.fullName %>
    i am here broh
  </div>

  <div class="conatiner mt-4">
    <h3>Comment</h3>
    <% if (locals.user) { %>
      <form action="/blog" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <textarea id="content" name="content" class="form-control" rows="4"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Comment</button>
      </form>
    <% } else { %>
      <p>Please log in to leave a comment.</p>
    <% } %>

  </div>

  <div class="mt-3">
    <% comments.forEach(comment => { %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <img src="<%= comment.CreatedBy.profileImageURL %>" class="card-img-top" alt="<%= blog.title %>" width="10px" height="20px"><%= comment.CreatedBy.fullName %>
          <pre><%= comment.content %></pre>
        </div>
      </div>
    <% }); %>
  </div>

  <%- include('partials/script') %>
</body>
</html>